@article{menon_opsin_2011,
	title = {Opsin is a phospholipid flippase},
	volume = {21},
	issn = {0960-9822},
	url = {http://www.ncbi.nlm.nih.gov/pmc/articles/PMC3057128/},
	doi = {10.1016/j.cub.2010.12.031},
	abstract = {Polar lipids must flip-flop rapidly across biological membranes to sustain cellular life [, ], but flipping is energetically costly [] and it’s intrinsic rate is low. To overcome this problem, cells have membrane proteins that function as lipid transporters (flippases) to accelerate flipping to a physiologically relevant rate. Flippases that operate at the plasma membrane of eukaryotes, coupling {ATP} hydrolysis to unidirectional lipid flipping, have been defined at a molecular level []. On the other hand, {ATP}-independent bidirectional flippases that translocate lipids in biogenic compartments, e.g., the endoplasmic reticulum, and specialized membranes, e.g., photoreceptor discs [, ], have not been identified even though their activity has been recognized for more than 30 years []. Here we demonstrate that opsin is the {ATP}-independent phospholipid flippase of photoreceptor discs. We show that reconstitution of opsin into large unilamellar vesicles promotes rapid (τ {\textless}10 sec) flipping of phospholipid probes across the vesicle membrane. This is the first molecular identification of an {ATP}-independent phospholipid flippase in any system. It reveals an unexpected activity for opsin and, in conjunction with recently available structural information on this G-protein coupled receptor [, ], significantly advances our understanding of the mechanism of {ATP}-independent lipid flip-flop.},
	pages = {149--153},
	number = {2},
	journaltitle = {Current biology : {CB}},
	shortjournal = {Curr Biol},
	author = {Menon, Indu and Huber, Thomas and Sanyal, Sumana and Banerjee, Sourabh and Barré, Patrick and Canis, Sam and Warren, J. David and Hwa, John and Sakmar, Thomas P. and Menon, Anant K.},
	urldate = {2014-12-14},
	date = {2011-01-25},
	pmid = {21236677},
	pmcid = {PMC3057128},
	file = {Menon et al. - 2011 - Opsin is a phospholipid flippase.pdf:/home/balin/Bibliography/storage/K2U58Q9E/Menon et al. - 2011 - Opsin is a phospholipid flippase.pdf:application/pdf}
}

